<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Loan Departement" parallel = "tests" thread-count="6">
	<listeners>
		<listener class-name="Test.Listeners"/>
	</listeners>
  	<test parallel = "classes" thread-count="5" name="Personal Loan">
   	<parameter name="PURL" value="perl.com"/>
 	  		<classes>
      			<class name="Test.Day1"/>
      			<class name="Test.Day2"/>
      			<class name="Test.Day4"/>
    		</classes>
  		</test>   
	  <test thread-count="5" name="Car Loan">
	  <parameter name="CURL" value="carl.com"/>
	    <classes>
	      	<class name="Test.Day3">
	      		<methods> 
	      				<exclude name="API.*"/>
	      		</methods>
	      	</class>
	    </classes>
	  </test> 
</suite>
